<!doctype html>
<html class="nojs">
  <head>{{> head }}</head>
  <body data-app="{{appUrl}}" data-appRoot="{{appRoot}}" {{#sources}}data-source-{{source}}="{{src}}"{{/sources}} class="{{bodyClass}}" data-script='{ "js" : [ "commons.js", "subjects_page.js" ], "hbs" : [ { "template" : "items.hbs", "id" : "items" } ] }'>
    {{> header }}
    <main class="main container-fluid" role="main" data-identifier="{{ss_identifier}}">
	  <header>
	   <h2 class="page-title">{{{label}}}</h2>
        <div class="resultsnum">Showing  <span class="start"></span> - <span class="docslength"></span> of <span class="numfound"></span> results</div>
        <select id="browse-select">
          <option data-sort-dir="asc" value="iass_longlabel" selected>Sort by Title</option>
          <option data-sort-dir="asc" value="ss_sauthor">Sort by Author</option>
        </select>
	  </header>
  	  <div>
  	    {{#content}}
  	      {{#items}}
            <div class="widget" data-name="items" data-rows="{{rows}}" data-fl="{{fl}}" {{#fq}}data-fq-{{filter}}="{{value}}" {{/fq}}>
            </div>
            <div class="text-center">
              <div id="paginator" class="pagination"></div>
            </div>
          {{/items}}
        {{/content}}        
	  </div>
    </main>
    {{> footer }}
    {{{ closure }}}
  </body>
</html>
